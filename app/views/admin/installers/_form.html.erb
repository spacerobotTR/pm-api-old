
<div class="card mb-4">
  <h6 class="card-header">
    Add New Installer
  </h6>
  <div class="card-body">
    <%= form_with(model: admin_installer, local: true) do |f| %>
    <% if admin_installer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(admin_installer.errors.count, "error") %> prohibited this installer from being saved:</h2>

        <ul>
        <% admin_installer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group row">
    <%= f.label :installertype, 'Installer Type', { :class=>"col-form-label col-sm-2 text-sm-right" } %>

    <div class="col-sm-10">
      <%= f.text_field :installertype, { :class=>"form-control", autofocus: true, required: true } %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, 'Installer Type', { :class=>"col-form-label col-sm-2 text-sm-right" } %>

    <div class="col-sm-10">
      <%= f.text_field :description, { :class=>"form-control", autofocus: true, required: true } %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="col-form-label col-sm-2 text-sm-right">
  </div>


  <div class="col-sm-10">

    <%= button_tag type: 'submit', class: "btn btn-primary" do %>
      <span class="ion ion-md-add"></span> &nbsp;&nbsp;<% if ( f.object.new_record? ) %>Add Installer<% else %>Update Installer<% end %>

    <% end %>
    <%= link_to 'Cancel', admin_installers_path, { :class=>"btn btn-secondary" } %>
  </div>

</div>

<% end %>
</div>
